<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/login"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:background="@drawable/login"
     android:gravity="center"
     >
    
     <TableRow
         android:gravity="center"
         android:layout_marginTop="30dp">
         <TextView 
             android:gravity="center"
             android:text="회원가입"
             android:textSize="30sp"
             android:layout_span="4"/>
     </TableRow>
    
     <TableRow
         android:gravity="center"
         android:layout_marginTop="20dp">
         <TextView 
         	 android:gravity="center_vertical"
             android:text="ID "
             android:layout_span="1"/>
         <EditText
             android:id="@+id/id_input"
             android:text="godong9@gmail.com"
             android:layout_span="3"/>
     </TableRow> 
     <TableRow
         android:gravity="center"
         android:layout_marginTop="10dp">
         <TextView 
             android:gravity="center_vertical"
             android:text="PW "
             android:layout_span="1"/>
         <EditText
             android:id="@+id/password_input"
             android:inputType="textPassword"
             android:text="godong1234" 
             android:layout_span="3"/>
     </TableRow>
     <TableRow
         android:gravity="center"
         android:layout_marginTop="10dp">
         <TextView 
         	 android:gravity="center_vertical"
             android:text="별명 "
             android:layout_span="1"/>
         <EditText
             android:id="@+id/nickname_input"
             android:text="godong9" 
             android:layout_span="3"/>
     </TableRow>
      
     <TableRow
         android:gravity="center"
         android:layout_marginTop="12dp">
         <Button
             android:id="@+id/read_terms"
             android:text="이용약관"
             android:textSize="15sp"
             android:textColor="#000000"
             android:layout_column="2"			
             />
         <CheckBox 
             android:id="@+id/terms_agree_btn"
             android:text="이용약관 동의"
             android:textColor="#000000"
             />
     </TableRow>
     <TableRow
         android:gravity="center"
         android:layout_marginTop="6dp">
         <Button
             android:gravity="center"
             android:id="@+id/join_complete"
             android:text="가입하기"
             android:onClick="onJoinCompleteBtn"
             android:layout_span="4"
             />
     </TableRow>
</TableLayout>
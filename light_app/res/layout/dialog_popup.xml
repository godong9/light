<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

 		<Button
            android:id="@+id/rival_dialog_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rivalDialogClickBtn"
            android:text="Exit" />

        <Button
            android:id="@+id/rival_dialog_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rivalDialogClickBtn"
            android:text="One" />


        <Button
            android:id="@+id/rival_dialog_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rivalDialogClickBtn"
            android:text="Two" />

  
        <Button
            android:id="@+id/rival_dialog_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rivalDialogClickBtn"
            android:text="Three" />


</LinearLayout>
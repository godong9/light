<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/profile_background"
    android:orientation="vertical" >
	
    <LinearLayout 
		android:layout_weight ="22"
		android:layout_width="fill_parent"
   		android:layout_height="0dp"
   		android:layout_marginTop="72dp"
   		android:orientation="vertical">
   		<TextView       
   		    android:layout_weight ="30"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="61dp"
            android:text="성별"    
            android:textSize = "14sp"
            android:textColor="#FFFFFF" 
		  	android:singleLine="true"/>
   		<LinearLayout 
   		    android:layout_weight ="70"
			android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	   		android:orientation="horizontal"
	   		android:gravity="center">
	   		
   		    <ImageButton  
		        android:id="@+id/profile_woman_btn" 
				android:layout_width="75dp"
				android:layout_height="40dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"	
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"	
				android:onClick="onProfileWomanBtn"		
				android:background="@drawable/profile_woman_btn"/> 
   		    <ImageButton  
		        android:id="@+id/profile_man_btn" 
				android:layout_width="75dp"
				android:layout_height="40dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"	
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"		
				android:onClick="onProfileManBtn"	
				android:background="@drawable/profile_man_btn"/> 
   		    
   		</LinearLayout>
   		
   		
   	</LinearLayout>
   	
    <LinearLayout 
		android:layout_weight ="27"
		android:layout_width="fill_parent"
   		android:layout_height="0dp"
   		android:orientation="vertical">
   		<TextView       
   		    android:layout_weight ="30"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10.5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="58dp"
            android:text="키/체중"    
            android:textSize = "14sp"
            android:textColor="#FFFFFF" 
		  	android:singleLine="true"/>
   		<LinearLayout 
   		    android:layout_weight ="70"
			android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	   		android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="28dp"
	   		android:gravity="center"
	   		android:orientation="horizontal">
	   		
   		    <EditText           
	             android:id="@+id/profile_height"
	             android:nextFocusDown="@+id/profile_weight"
	             android:layout_marginTop="5dp"
	             android:layout_marginBottom="5dp"
	             android:layout_marginLeft="0dp"
	             android:layout_marginRight="4dp"
				 android:layout_width="70dp"
				 android:layout_height="40dp"
				 android:inputType="numberSigned"/>
   		    <TextView 
   		        android:layout_width="30dp"
   		        android:layout_height="40dp"
   		        android:gravity="center_vertical"
	            android:text="cm"
	            android:textSize="16sp"
	            android:textColor="#525252"/>
   		    <EditText           
	             android:id="@+id/profile_weight"
	             android:layout_marginTop="5dp"
	             android:layout_marginBottom="5dp"
	             android:layout_marginLeft="8dp"
	             android:layout_marginRight="4dp"
				 android:layout_width="70dp"
				 android:layout_height="40dp"
				 android:inputType="numberSigned"/>
   		    <TextView 
   		        android:layout_width="30dp"
   		        android:layout_height="40dp"
   		        android:gravity="center_vertical"
	            android:text="kg"
	            android:textSize="16sp"
	            android:textColor="#525252"/>
   		</LinearLayout>
   		
   		
   	</LinearLayout>
   	
    <LinearLayout 
		android:layout_weight ="26"
		android:layout_width="fill_parent"
   		android:layout_height="0dp"
   		android:orientation="vertical">
   		<TextView       
   		    android:layout_weight ="30"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="54.5dp"
            android:text="목표 체중"    
            android:textSize = "14sp"
            android:textColor="#FFFFFF" 
		  	android:singleLine="true"/>
   		<LinearLayout 
   		    android:layout_weight ="70"
			android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	   		android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
	   		android:gravity="center"
	   		android:orientation="horizontal">
   		    
   		    <EditText           
	             android:id="@+id/profile_goal"
	             android:layout_marginTop="5dp"
	             android:layout_marginBottom="5dp"
	             android:layout_marginLeft="4dp"
	             android:layout_marginRight="4dp"
				 android:layout_width="70dp"
				 android:layout_height="40dp"
				 android:inputType="numberSigned"/>
   		    <TextView 
   		        android:layout_width="30dp"
   		        android:layout_height="40dp"
   		        android:gravity="center_vertical"
	            android:text="kg"
	            android:textSize="16sp"
	            android:textColor="#525252"/>
   		    
	   		
   		</LinearLayout>
   		
   		
   	</LinearLayout>
    <LinearLayout 
		android:layout_weight ="26"
		android:layout_width="fill_parent"
   		android:layout_height="0dp"
   		android:gravity="center" 
   		android:orientation="vertical">	
	    <ImageButton
	        android:id="@+id/profile_ok_btn"		            
			android:layout_width="270dp"
			android:layout_height="48dp"
			android:layout_marginTop="30dp"	
			android:layout_marginBottom="20dp"
			android:onClick="onProfileCompleteBtn"	
			android:background="@drawable/profile_ok_btn"/> 
   </LinearLayout>
</LinearLayout>
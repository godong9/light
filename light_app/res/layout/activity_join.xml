<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/login"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:background="@drawable/login"
     android:gravity="center"
     >
    
     <TableRow
         android:gravity="center"
         android:layout_marginTop="70dp">
         <TextView 
             android:gravity="center"
             android:text="회원가입"
             android:textSize="30sp"
             android:layout_span="4"/>
     </TableRow>
    
     <TableRow
         android:gravity="center"
         android:layout_marginTop="20dp">
         <TextView 
         	 android:gravity="center_vertical"
             android:text="ID "
             android:layout_span="1"/>
         <EditText
             android:id="@+id/join_id"
             android:layout_span="3"/>
     </TableRow> 
     <TableRow
         android:gravity="center"
         android:layout_marginTop="10dp">
         <TextView 
             android:gravity="center_vertical"
             android:text="PW "
             android:layout_span="1"/>
         <EditText
             android:id="@+id/join_password"
             android:inputType="textPassword"
             android:layout_span="3"/>
     </TableRow>
     <TableRow
         android:gravity="center"
         android:layout_marginTop="10dp">
         <TextView 
             android:gravity="center_vertical"
             android:text="PW_Check "
             android:layout_span="1"/>
         <EditText
             android:id="@+id/join_re_password"
             android:inputType="textPassword"
             android:layout_span="3"/>
     </TableRow>
     <TableRow
         android:gravity="center"
         android:layout_marginTop="10dp">
         <TextView 
         	 android:gravity="center_vertical"
             android:text="닉네임 "
             android:layout_span="1"/>
         <EditText
             android:id="@+id/join_nickname"
             android:layout_span="3"/>
     </TableRow>
      
     <TableRow
         android:gravity="center"
         android:layout_marginTop="12dp">
         <Button
             android:id="@+id/join_read_terms"
             android:text="이용약관"
             android:textSize="15sp"
             android:textColor="#000000"
             android:layout_column="1"			
             />
         <CheckBox 
             android:id="@+id/join_terms_agree_btn"
             android:text="이용약관 동의"
             android:textColor="#000000"
             />
     </TableRow>
     <TableRow
         android:gravity="center"
         android:layout_marginTop="6dp">
         <Button
             android:gravity="center"
             android:id="@+id/join_complete"
             android:text="가입하기"
             android:onClick="onJoinCompleteBtn"
             android:layout_span="4"
             />
     </TableRow>
</TableLayout>
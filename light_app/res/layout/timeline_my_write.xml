<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal" >

	<TextView
        android:id="@+id/timeline_my_write_date"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textSize = "8sp"
        android:textColor="#FFFFFF" 
        android:layout_marginBottom="8dp"
        android:singleLine="true"
        android:background="@drawable/timeline_my_date"/>
	
	<LinearLayout
	    android:id="@+id/timeline_my_write_type"
	    android:layout_width="220dp"
    	android:layout_height="36dp"
    	android:background="@drawable/timeline_my_food"
    	android:orientation="horizontal"
    	android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
    	>
    	
		<TextView
	        android:id="@+id/timeline_my_write_pre_content"
	        android:layout_width="28dp"
        	android:layout_height="fill_parent"
        	android:layout_marginTop="0dp"
        	android:layout_marginLeft="4dp"
        	android:textSize = "10sp"
        	android:textColor="#4980BD" 
        	android:gravity="center"
        	android:singleLine="true"/>
		
		<TextView
	        android:id="@+id/timeline_my_write_content"
	        android:layout_width="68dp"
        	android:layout_height="fill_parent"
        	android:layout_marginTop="0dp"
        	android:layout_marginLeft="1dp"
        	android:textSize = "14sp"
        	android:textColor="#424242" 
        	android:singleLine="true"
	     	android:gravity="center_vertical"
	      />
		
		<TextView
	        android:id="@+id/timeline_my_write_calorie"
	        android:layout_width="82dp"
        	android:layout_height="fill_parent"
         	android:layout_marginTop="0dp"
        	android:layout_marginLeft="0dp"
        	android:textSize = "15sp"
        	android:textColor="#FF0062" 
        	android:gravity="center"     	
	      />
	
	</LinearLayout>

</LinearLayout>

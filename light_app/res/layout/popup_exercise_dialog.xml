<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
		
	<LinearLayout
        android:layout_width="300dp"
        android:layout_height="373dp"
        android:orientation="vertical" 
        android:background="@drawable/write_dialog_background">
 		
	    <LinearLayout
	        android:layout_weight="12"	
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"	
	        android:orientation="horizontal">
	        
	        <TextView   
				android:layout_width="240dp"						
				android:layout_height="fill_parent"
				android:layout_marginLeft="28.5dp"
				android:paddingTop="19dp"
				android:text="운동 기록"    
	            android:textSize ="14sp"
	            android:textStyle="bold"
	            android:textColor="#424242" 
	            android:singleLine="true"/>
	        <ImageButton  
		        android:id="@+id/write_exercise_exit_btn" 
				android:layout_width="20dp"						
				android:layout_height="20dp"
				android:layout_gravity="center_vertical"
				android:layout_marginTop="1dp"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:background="@drawable/rival_dialog_exit"/> 	
				
        </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
			android:layout_weight="74"
	        android:orientation="vertical">
	        
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
				android:layout_weight="20"
		        android:orientation="vertical">
		        <TextView          
		             android:id="@+id/write_exercise_val"
					 android:layout_width="fill_parent"
					 android:layout_height="30dp"
					 android:text="가가가가가가가가"
					 android:textSize ="16sp"
					 android:textColor="#000000" 
					 android:background="#678999"
					 android:layout_marginTop="8dp"
					 android:layout_marginBottom="4dp"
					 android:layout_marginLeft="24dp"
				 	 android:layout_marginRight="4dp"/>	
			</LinearLayout>
	        <ListView 
		          android:id="@+id/exercise_scroll"
		          android:layout_width="fill_parent"
		          android:layout_height="100dp"    
		          android:visibility="gone"
		          android:transcriptMode="normal"
		          android:divider="#FFFFFF"
		       	  android:listSelector="#00000000"
		       	  android:background="#454344"
		       	  android:cacheColorHint="#00000000" />
	        <ListView 
		          android:id="@+id/exercise_scroll"
		          android:layout_width="fill_parent"
		          android:layout_height="0dp"    
		          android:layout_weight="25"
		          android:transcriptMode="normal"
		          android:divider="#FFFFFF"
		       	  android:listSelector="#00000000"
		       	  android:background="#455564"
		       	  android:cacheColorHint="#00000000" />
	        <ListView 
		          android:id="@+id/exercise_scroll"
		          android:layout_width="fill_parent"
		          android:layout_height="0dp"    
		          android:layout_weight="25"
		          android:transcriptMode="normal"
		          android:divider="#FFFFFF"
		       	  android:listSelector="#00000000"
		       	  android:background="#454663"
		       	  android:cacheColorHint="#00000000" />
	        <TextView          
	             android:id="@+id/write_exercise_calorie"
				 android:layout_width="fill_parent"
				 android:layout_height="0dp"
				 android:layout_weight="30"
				 android:layout_marginBottom="14dp"
				 android:text="-9999kcal"
				 android:textSize ="16sp"
				 android:textColor="#000000" 
				 android:background="#678999"
				 android:layout_marginTop="8dp"
				 android:layout_marginLeft="24dp"
			 	 android:layout_marginRight="4dp"/>	
	        
        </LinearLayout>
	           	          
     	<ImageButton
	        android:id="@+id/write_exercise_ok_btn"
	        android:layout_weight="14"
	        android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="16dp"
			android:layout_marginLeft="13dp"
			android:layout_marginRight="13dp"
			android:layout_gravity="center"
	        android:background="@drawable/write_ok_btn"/>
	            
	</LinearLayout>

</LinearLayout>
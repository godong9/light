<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal" >
    
    <TextView
	    android:id="@+id/timeline_other_write_nickname"
	    android:layout_width="70dp"
	    android:layout_height="20dp"
	    android:layout_gravity="top"
	    android:gravity="center"
	    android:textSize = "12sp"
	    android:textStyle="bold"
	    android:textColor="#FFFFFF" 
	  	android:singleLine="true"
	    android:paddingLeft="5dp"
	  	android:layout_marginTop="13.5dp"
	  	android:layout_marginLeft="5dp"
	    android:background="@drawable/timeline_other_nickname"/>
    
	<LinearLayout
	    android:id="@+id/timeline_other_write_type"
	    android:layout_width="220dp"
    	android:layout_height="35dp"
    	android:background="@drawable/timeline_other_food"
    	android:orientation="horizontal"
    	android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
    	>   
	    
		<TextView
	        android:id="@+id/timeline_other_write_pre_content"
	        android:layout_width="28dp"
        	android:layout_height="fill_parent"
        	android:layout_marginTop="0dp"
        	android:layout_marginLeft="40dp"
        	android:textSize = "10sp"
        	android:textColor="#4980BD" 
        	android:gravity="center"
        	android:singleLine="true"
	      />
		
		<TextView
	        android:id="@+id/timeline_other_write_content"
	        android:layout_width="68dp"
        	android:layout_height="fill_parent"
        	android:layout_marginTop="0dp"
        	android:layout_marginLeft="1dp"
        	android:textSize = "14sp"
        	android:textColor="#424242" 
        	android:singleLine="true"
	     	android:gravity="center_vertical"
	      />
		
		<TextView
	        android:id="@+id/timeline_other_write_calorie"
	        android:layout_width="82dp"
        	android:layout_height="fill_parent"
         	android:layout_marginTop="0dp"
        	android:layout_marginLeft="0dp"
        	android:textSize = "15sp"
        	android:textColor="#4980BD" 
        	android:gravity="center"     	
	      />
	
	</LinearLayout>
	
	<TextView
        android:id="@+id/timeline_other_write_date"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textSize = "8sp"
        android:textColor="#FFFFFF" 
        android:layout_marginBottom="8dp"
        android:singleLine="true"
        android:background="@drawable/timeline_other_date"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
		
	<LinearLayout
        android:layout_width="300dp"
        android:layout_height="373dp"
        android:orientation="vertical" 
        android:background="@drawable/write_dialog_background">
 		
	    <LinearLayout
	        android:layout_weight="12"	
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"	
	        android:orientation="horizontal">
	        
	        <TextView   
				android:layout_width="240dp"						
				android:layout_height="fill_parent"
				android:layout_marginLeft="28dp"
				android:paddingTop="19dp"
				android:text="운동 기록"    
	            android:textSize ="14sp"
	            android:textStyle="bold"
	            android:textColor="#424242" 
	            android:singleLine="true"/>
	        <ImageButton  
		        android:id="@+id/write_exit_btn" 
				android:layout_width="20dp"						
				android:layout_height="20dp"
				android:layout_gravity="center_vertical"
				android:layout_marginTop="1dp"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:background="@drawable/rival_dialog_exit"/> 	
				
        </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
			android:layout_weight="74"
	        android:orientation="vertical">
	        
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
				android:layout_weight="25"
		        android:orientation="vertical">
		        
				<Spinner 
				    android:id="@+id/exercise_spinner" 
			        android:layout_width="match_parent" 
			        android:layout_height="wrap_content" 
			        android:drawSelectorOnTop="true"
			        android:layout_marginTop="8dp"
			        android:layout_marginBottom="0dp" 
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			    />

			</LinearLayout>
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
				android:layout_weight="25"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
		        android:orientation="horizontal">
		        
	            <TextView          
					 android:layout_width="0dp"
					 android:layout_height="fill_parent"
					 android:layout_weight="10"
					 android:gravity="center"
					 android:text="운동강도"
					 android:textSize ="12sp"
					 android:textColor="#000000" 
					 android:layout_marginTop="8dp"
					 android:layout_marginBottom="8dp"
					 android:layout_marginLeft="1dp"
				 	 android:layout_marginRight="3dp"/>	
				<ImageButton
			        android:id="@+id/write_exercise_low_btn"
			        android:layout_weight="30"
			        android:layout_width="0dp"
					android:layout_height="fill_parent"
					android:layout_marginTop="12dp"
					android:layout_marginBottom="12dp"
					android:layout_marginLeft="3dp"
					android:layout_marginRight="3dp"
					android:layout_gravity="center"
			        android:background="@drawable/write_low_btn"/>
				<ImageButton
			        android:id="@+id/write_exercise_middle_btn"
			        android:layout_weight="30"
			        android:layout_width="0dp"
					android:layout_height="fill_parent"
					android:layout_marginTop="12dp"
					android:layout_marginBottom="12dp"
					android:layout_marginLeft="3dp"
					android:layout_marginRight="3dp"
					android:layout_gravity="center"
			        android:background="@drawable/write_middle_btn"/>
				<ImageButton
			        android:id="@+id/write_exercise_high_btn"
			        android:layout_weight="30"
			        android:layout_width="0dp"
					android:layout_height="fill_parent"
					android:layout_marginTop="12dp"
					android:layout_marginBottom="12dp"
					android:layout_marginLeft="3dp"
					android:layout_marginRight="3dp"
					android:layout_gravity="center"
			        android:background="@drawable/write_high_btn"/>
				      
			</LinearLayout>
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
				android:layout_weight="20"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
		        android:orientation="horizontal">
		        
	            <TextView          
					 android:layout_width="0dp"
					 android:layout_height="fill_parent"
					 android:layout_weight="10"
					 android:gravity="center"
					 android:text="시간"
					 android:textSize ="12sp"
					 android:textColor="#000000" 
					 android:layout_marginTop="8dp"
					 android:layout_marginBottom="8dp"
					 android:layout_marginLeft="1dp"
				 	 android:layout_marginRight="3dp"/>	
				 	 
	            <LinearLayout
			        android:layout_width="0dp"
			        android:layout_height="fill_parent"
					android:layout_weight="90"
					android:layout_marginTop="8dp"
					android:layout_marginBottom="8dp"
					android:layout_marginLeft="2dp"
					android:layout_marginRight="2dp"	
			        android:orientation="horizontal">
					<SeekBar
				        android:id="@+id/write_exercies_time_bar"
				        android:layout_weight="80"
				        android:layout_width="0dp"
				        android:layout_height="fill_parent"
				        android:gravity="center"
				        android:max="120"
				        android:progress="0" />
					<TextView
				        android:id="@+id/write_exercies_time_text"
				        android:layout_weight="20"
				        android:layout_width="0dp"
				        android:layout_height="fill_parent"
				        android:gravity="center"
				        android:text="0분"
				        android:textColor="#000000"  />
				
				</LinearLayout>
			</LinearLayout>
	        <TextView          
	             android:id="@+id/write_exercise_calorie"
				 android:layout_width="fill_parent"
				 android:layout_height="0dp"
				 android:layout_weight="30"
				 android:layout_marginTop="8dp"
				 android:layout_marginBottom="14dp"
				 android:layout_marginLeft="24dp"
			 	 android:layout_marginRight="24dp"
			 	 android:gravity="center"
				 android:text="-0kcal"
				 android:textStyle="bold"
				 android:textSize ="24sp"
				 android:textColor="#FF0062" />	
	        
        </LinearLayout>
	           	          
     	<ImageButton
	        android:id="@+id/write_exercise_ok_btn"
	        android:layout_weight="14"
	        android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="16dp"
			android:layout_marginLeft="13dp"
			android:layout_marginRight="13dp"
			android:layout_gravity="center"
	        android:background="@drawable/write_ok_btn"/>
	            
	</LinearLayout>

</LinearLayout>